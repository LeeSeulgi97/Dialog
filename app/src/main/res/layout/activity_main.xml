<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/test1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일반 다이얼로그 - Alertdialog"
        android:textSize="30dp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목록선택 다이얼로그 - Alertdialog"
        android:textSize="30dp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/test3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라디오 버튼 다이얼로그 - Alertdialog(SingleChoice)"
        android:textSize="30dp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/test5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜 다이얼로그 - DatePickerDialog"
        android:textSize="30dp"
        android:layout_margin="5dp"/>

    <TextView
    android:id="@+id/test6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="시간 다이얼로그 - TimePickerDialog"
    android:textSize="30dp"
    android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/test7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialog Box - ProgressDialog"
        android:textSize="30dp"
        android:layout_margin="5dp"/>
</LinearLayout>